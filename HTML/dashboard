  <script>
    // Initialize map
    var map = L.map('map').setView([-33.9249, 18.4241], 12);

    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '&copy; OpenStreetMap contributors'
    }).addTo(map);

    var signalData = [
      [-33.9249, 18.4241, 0.9],  // strong
      [-33.95, 18.45, 0.3],      // weak
      [-34.0, 18.5, 0.7]         // medium
    ];

    L.heatLayer(signalData, {
      radius: 25,
      blur: 15,
      maxZoom: 17,
    }).addTo(map);

    function generateReport() {
      alert("ðŸ“‘ Generating signal strength report...");
    }
